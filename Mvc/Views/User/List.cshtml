@model List<Entities.Concrete.User>
<section class="card">
    <header class="card-header">
        <div class="card-actions">
            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
            <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
        </div>
        <h2 class="card-title">Users</h2>
    </header>
    <div class="card-body">
        <table class="table table-bordered table-striped mb-0" id="datatable-default">
            <thead>
                <tr>
                    <th>Name Surname</th>
                    <th>E-Mail</th>
                    <th>Phone</th>
                    <th class="text-center text-nowrap">Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>                    

                        <td>@user.Name @user.Surname</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>

                        <td class="text-center text-nowrap" style="width:90px">
                            <a href="@Url.Action("Update",new { @id = user.Id})" class="btn btn-info btn-xs" data-toggle="tooltip" data-placement="bottom" title="Edit"><i class='fas fa-pencil-alt'></i></a>
                            <a href="@Url.Action("Delete",new { id = user.Id})" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="bottom" title="Delete"><i class='fas fa-trash-alt'></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>




